<%= form_for @entity, html: { class: 'legal-entity-form' } do |f| %>

    <div class="col1">

        <div class="label-wrapper">
            <label>Naziv</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-briefcase"></i></span>
            <%= f.text_field :name, name: 'name' %>
        </div>

        <div class="label-wrapper">
            <label>Odgovorno lice</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-user"></i></span>
            <%= f.text_field :owner, name: 'owner' %>
        </div>

        <div class="label-wrapper">
            <label>Država</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-list-alt"></i></span>
            <%= f.text_field :country, name: 'country' %>
        </div>

        <div class="label-wrapper">
            <label>Grad</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-list-alt"></i></span>
            <%= f.text_field :city, name: 'city' %>
        </div>

        <div class="label-wrapper">
            <label>Poštanski broj</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-list-alt"></i></span>
            <%= f.text_field :postal_code, name: 'postal_code' %>
        </div>

        <div class="label-wrapper">
            <label>Adresa</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-list-alt"></i></span>
            <%= f.text_field :address, name: 'address' %>
        </div>

        <div class="input-wrapper" id="register-submit-wrapper">
            <%= f.submit 'Sačuvaj', id: 'submit-create-pl' %>
        </div>

    </div>

    <div class="col2">

        <div class="label-wrapper">
            <label>Telefon</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-phone"></i></span>
            <%= f.text_field :phone %>
        </div>

        <div class="label-wrapper">
            <label>Faks</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-fax"></i></span>
            <%= f.text_field :fax %>
        </div>

        <div class="label-wrapper">
            <label>Mobilni telefon</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-mobile"></i></span>
            <%= f.text_field :mobile %>
        </div>

        <div class="label-wrapper">
            <label>E-mail</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-envelope"></i></span>
            <%= f.text_field :email %>
        </div>

        <div class="label-wrapper">
            <label>Web</label>
        </div>
        <div class="input-wrapper">
            <span class="form-icon"><i class="fa fa-globe"></i></span>
            <%= f.text_field :web %>
        </div>

    </div>

<% end %>