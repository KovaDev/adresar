<div id="profile-wrapper">

    <%= render 'users/navigation' %>

    <div id="profile-info">

        <div class="profile-title"><h1>Promjena lozinke</h1><hr id="profile-hr" /></div>

        <div id="user-password-form-wrapper" class="form-wrapper slideLeft">

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                   html: { method: :put, id: 'id="admin-password-form"' }) do |f| %>

                <%= devise_error_messages! %>

                <div class="col1">

                    <div class="label-wrapper">
                        <%= f.label :email, 'E-mail' %><br />
                    </div>
                    <div class="input-wrapper">
                        <span class="form-icon"><i class="fa fa-envelope"></i></span>
                        <%= f.email_field :email, autofocus: true %>
                    </div>

                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                    <% end %>

                    <div class="label-wrapper">
                        <%= f.label :password, 'Lozinka' %><br />
                    </div>
                    <div class="input-wrapper">
                      <span class="form-icon"><i class="fa fa-lock"></i></span>
                        <%= f.password_field :password, autofocus: true, autocomplete: 'off' %>
                    </div>

                    <div class="input-wrapper" id="register-submit-wrapper">
                        <%= f.submit 'SaÄuvaj izmjene', id: 'submit-admin-change-password' %>
                    </div>

                </div>

                <div class="col2">

                    <div class="label-wrapper">
                        <%= f.label :password_confirmation, 'Potvrda lozinke' %>
                    </div>
                    <div class="input-wrapper">
                        <span class="form-icon"><i class="fa fa-lock"></i></span>
                        <%= f.password_field :password_confirmation, autocomplete: 'off' %>
                    </div>

                    <div class="label-wrapper">
                        <%= f.label :current_password, 'Trenutna lozinke' %>
                    </div>
                    <div class="input-wrapper">
                        <span class="form-icon"><i class="fa fa-lock"></i></span>
                        <%= f.password_field :current_password, autocomplete: 'off' %>
                    </div>

                </div>

            <% end %>

        </div>

    </div>

</div>



