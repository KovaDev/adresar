<div id="profile-nav">

    <div id="avatar"><%= image_tag 'avatar.png', id: 'avatar' %></div>

    <div class="profile-menu-wrapper">
        <button id="profile-menu-trigger"><span>Akcije</span><i class="fa fa-chevron-down"></i></button>
        <nav id="user-profile-nav">
            <ul>
                <li><%= link_to 'Pregled podataka', profile_path(current_user) %></li>
                <li><%= link_to 'Promjena lozinke', edit_user_registration_path %></li>
                <li><%= link_to 'Promjena podataka', edit_user_path(current_user) %></li>
                <% if current_user.is_admin? %>
                  <li><a href="#">Korisnici</a></li>
                  <li><%= link_to 'Novi subjekat (pravno lice)', new_legal_entity_path %></li>
                  <li><%= link_to 'Novi subjekat (fizicko lice)', new_physical_entity_path %></li>
                <% end %>
            </ul>
        </nav>
    </div>
</div>